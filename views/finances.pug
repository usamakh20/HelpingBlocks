extends layout2

block content
  nav.navbar.navbar-default.navbar-fixed
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button' data-toggle='collapse' data-target='#navigation-example-2')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Manage Finances
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-left
          li.dropdown
            a.dropdown-toggle(href='#' data-toggle='dropdown')
              i.fa.fa-globe
              b.caret.hidden-sm.hidden-xs
              span.notification.hidden-sm.hidden-xs 5
              p.hidden-lg.hidden-md
                | 2 Notifications
                b.caret
            ul.dropdown-menu
              li
                a(href='#') Notification 1
              li
                a(href='#') Notification 2

        ul.nav.navbar-nav.navbar-right

          li.dropdown
            a.dropdown-toggle(href='#' data-toggle='dropdown')
              p
                | Options
                b.caret
            ul.dropdown-menu
              li
                a(href='#') Action
              li
                a(href='#') Action 2
              li
                a(href='#') Action 3
              li
                a(href='#') Action 4
              li
                a(href='#') Something
              li.divider
              li
                a(href='#') Separated link
          li
            a(href='#')
              p Log out
          li.separator.hidden-lg.hidden-md
  .col-md-8
    .card
      .header
        h4.title Create New Donation
      .content
        form(action='/finances' method='post')
          .row
            .col-md-5
              .form-group
                label Name
                input.form-control(type='text' placeholder='Full Name' value='' name='name')
            .col-md-5
              .form-group
                label CNIC
                input.form-control(type='text' placeholder='CNIC' value='' name='cnic')
            .col-md-6
              .form-group
                label Amount
                input.form-control(type='text' placeholder='Amount' value='' name='amount')
          button.btn.btn-info.btn-fill.pull-right(type='submit') Create Donation
          .clearfix

  .content
    .container-fluid
      .row
        .col-md-12
          .card
            .header
              h4.title Finances List
              p.category List of donations received
              button.refbtn.btn-info.btn-fill.pull-left Refresh
            .content.table-responsive.table-full-width
              table.table.table-hover.table-striped
                thead
                  th ID
                  th Donor Name
                  th Donor CNIC
                  th Amount
                tbody
                  each val,index in donations
                    tr
                      td=index
                      td=val.name
                      td=val.CNIC
                      td=val.amount

  script.
    $().ready(function(){
      $("li").each(function(k,v){
        if($(this).text() === "Finances")
        {
          $(this).attr("class", "active");
        }
      });
    });
